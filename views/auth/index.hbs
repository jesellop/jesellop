<div class="container mt-5">
    <div class="d-flex flex-wrap justify-content-center">
        {{#each items as |item|}}
        <div id="card" class="card mx-2 mb-3" style="width: 15rem">
            <img src="http://lorempixel.com/400/200/" class="card-img p-1" style="" alt="product-image">
            <div class="p-2">
                <h4 class="font-weight-bolder">{{ item.price}}</h4>
                <h6 class="card-text">{{ item.name }}</h6>
                <p class="text-black-50 ">{{ item.description }}</p>
                <a href="#" class="btn btn-outline-danger"><i class="fas fa-heart"></i></a>
            </div> 
        </div>
        {{/each}}
    </div> 
</div>