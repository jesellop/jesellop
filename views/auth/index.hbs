<div id="auth-index" class="container my-5">
    <div class="d-flex flex-wrap justify-content-center">
       
        {{#each items as |item|}}
        <a href="/items/{{item.id}}/details" id="{{item.id}}" class="view card mx-2 mb-3" style="width: 15rem">
            <form id="heart-nonclicked" class="heart">
                {{!-- class="heart" action="/user/{{ item.id }}/favourite" method="post" --}}
                <button class="btn btn-outline-danger badge-pill"><i class="fas fa-heart"></i></button>
            </form>
            <img src="{{item.images.[0]}}" class="card-img p-1" style="" alt="product-image">
            <div class="p-2">
                <h4 class="font-weight-bolder">{{ item.price }} â‚¬</h4>
                <h6 class="card-text">{{ item.name }}</h6>
                <p class="text-black-50 " maxlength="6">{{ item.address }}</p>
            </div> 
        </a>
        {{/each}}
    </div> 
</div>