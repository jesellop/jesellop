    <div id="item-details" class="container my-5">
       <div class="row justify-content-md-center">
           <div class="card col-7">
               <div class="card-body d-flex justify-content-between align-items-center">
                   <div class="row align-items-center">
                       <img id="img-user-sm" src="{{ user.image }}" alt="foto-perfil">
                       <h5 class="card-title pl-3">{{ user.alias }}</h5>
                   </div>
                   <div>
                       <a href="#" class="btn btn-outline-danger badge-pill mr-2"><i class="fas fa-heart"></i></a>
                       <a href="/user/{{item._id}}/messages" class="btn btn-outline-info text-info badge-pill px-3"><i class="fas fa-comments px-2"></i>Chat</a>
                   </div>

               </div>
               <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                   <ol class="carousel-indicators">
                   <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                   <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                   <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                   </ol>
               <div class="carousel-inner mt-3">
                   <div class="carousel-item active">
                       <img src="{{item.images.[0]}}" class="item-img d-block w-100" alt="...">
                   </div>
                   <div class="carousel-item">
                       <img src="{{item.images.[1]}}" class="item-img d-block w-100" alt="...">
                   </div>
                   <div class="carousel-item">
                       <img src="{{item.images.[2]}}" class="item-img d-block w-100" alt="...">
                   </div>
               </div>
               <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                 <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                 <span class="sr-only">Previous</span>
               </a>
               <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                 <span class="carousel-control-next-icon" aria-hidden="true"></span>
                 <span class="sr-only">Next</span>
               </a>
               </div>
               <div class="card-body">
                   <h2 class="text-info font-weight-bold">{{item.price}}</h2>
                   <h1 class="card-text font-weight-light">{{item.name}}</h1>
                   <hr/>
                   <p class="card-text">{{item.description}}</p>
                   <hr/>
               </div>
                <div class="card-body">  
                    <p class="card-text text-info"><i class="fas fa-map-marker-alt"></i> {{item.address}}</p>
                    <input hidden class="mb-2" name="latitude" type="text" id="latitude" value="{{ item.location.coordinates.[1] }}">
                    <input hidden class="mb-2" name="longitude" type="text" id="longitude" value="{{ item.location.coordinates.[0] }}">   
                    <div id="map"></div>
                </div>

           </div>
       </div>
   </div>
