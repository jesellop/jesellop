<section>   
    <div class="container mt-5">
        <div class="row justify-content-md-center">
            <div class="col-12 mb-3">
                <h5 class="text-info">Tus productos Favoritos</h5>
            </div>
            {{#each fav as |fav| }}
            <div class="card col-12 mb-3">
                <div class="row align-items-center">
                    <img class="img-list m-1" src="{{item.images.[0]}}" alt="">
                    <div class="ml-4 mt-1">
                        <h3>{{ item.name }}</h3>
                        <p>{{ item.price }}</p>
                    </div>
                    <div class="row ml-auto mr-2">
                        <form  action="/items/{{item.id}}/details" method="get">
                            <button class="btn btn-outline-info mr-2"><i class="fas fa-eye"></i></button>
                        </form>
                        <form  action="/user/{{fav.id}}/deleteFav" method="post">
                            <button class="btn btn-outline-danger mr-2"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </div>
                </div>  
            </div>
            {{/each}}
        </div>   
    </div>
</section>