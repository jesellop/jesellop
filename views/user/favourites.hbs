<section>
    
    <div class="container mt-5">
        <div class="row justify-content-md-center">
            <div class="col-12 mb-3">
                <h2>Tus productos Favoritos</h2>
                <a href="/user/list" class="text-info">Lista de productos que tienes en tu lista de favoritos actualmente</a>
            </div>
            {{#each favs as |fav| }}
            <div class="card col-12 mb-3">
                <div class="row align-items-center">
                    <img class="img-list m-1" src="{{item.images.[0]}}" alt="">
                    <div class="ml-4 mt-1">
                        <h3>{{ fav.item }}</h3>
                        <p>{{ favItem.name }}</p>
                    </div>
                   
                </div>  
            </div>
            {{/each}}
        </div>   
    </div>
    
</section>